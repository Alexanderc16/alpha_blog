<h1 class="text-center mt-4">Log in</h1>


<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
        <div class="control-label sm-2">
            <%= f.label :email %><br>
        </div>
    <div class="sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Input email", autofocus: true %>
    </div>
    </div>

    <div class="form-group">
        <div class="control-label sm-2">
            <%= f.label :password %>
        </div>
        <div class="sm-8">
            <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
        </div>
    </div>

        <br>
    <div class="form-group">
        <div class="sm-10 offset-2">
            <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
    
<% end %>
