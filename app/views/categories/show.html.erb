
<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-xs btn-primary" %>
  </div>
<% end %>
<br>

<h4 align="center"><%= @category.name %> articles </h4>

  <%= render 'articles/article', obj: @articles %>