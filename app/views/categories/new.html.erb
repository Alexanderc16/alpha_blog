<h1 style="align: center">Create new category</h1>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
    <div class="control-label sm-2">
        <%= f.label :name %><br>
    </div>
    <div class="sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Input category name", autofocus: true %>
    </div>
    </div> 
    <div class="form-group">
        <div class="sm-10 offset-2">
        <%= f.submit "Create" %>
        </div>
    </div>
    
<% end %>

<%= link_to "Back to articles list", articles_path %>
