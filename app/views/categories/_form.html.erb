<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group" align ="center">
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Input category name", autofocus: true %>
    </div>
  </div>
  <br>
  <div class="form-group" align ="center">
    <div class="col-sm-6">
      <%= f.submit "Create" %>
    </div>
<% end %>
</div>