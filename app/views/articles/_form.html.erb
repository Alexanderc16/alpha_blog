<% if @article.errors.any? %>
<h2>The following errors prevented article from being created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
</ul>
<% end %>
<% end %>

<div class='row'>
  <div class='col-md-8'>
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          
          <%= f.label :title %><br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, class:"form-control", placeholder: "Body of article" %>
          </div>
        </div>      
            <br>
        <div class="form-group">
          <div class="col-sm-10 offset-2">
            <%= f.submit%>
          </div>
        </div>
        
    <% end %>

<%= link_to "Back to articles list", articles_path %>
