<h1 align="left">Signup for Alpha-Blog</h1>
<div class='row'>
  <div class='md-8'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label sm-2">
          <%= f.label :username %><br>
        </div>
        <div class="sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Input username", autofocus: true %>
        </div>
      </div>

        <div class="form-group">
          <div class="control-label sm-2">
            <%= f.label :email %>
          </div>
          <div class="sm-8">
            <%= f.email_field :email, class:"form-control", placeholder: "Input email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label sm-2">
            <%= f.label :password %>
          </div>
          <div class="sm-8">
            <%= f.password_field :password, class:"form-control", placeholder: "Input password" %>
          </div>
        </div> 

            <br>
        <div class="form-group">
          <div class="sm-10 offset-2">
            <%= f.submit "Sign Up"%>
          </div>
        </div>
        
    <% end %>

        <%= link_to "Back to articles list", articles_path %>

    </div>
</div>
